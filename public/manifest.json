{
  "manifest_version": 3,
  "minimum_chrome_version": "92",
  "name": "Better YouTube Summary",
  "description": "Literally Better YouTube Summary ðŸŽ¯",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "js/vendor.js",
        "js/contentScript.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://bys.mthli.com/*"
  ]
}
