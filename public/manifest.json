{
  "manifest_version": 3,
  "minimum_chrome_version": "92",
  "name": "YouTube Video Summarizer",
  "description": "üìù Effortlessly summarize YouTube videos with 'YouTube Video Summarizer', your AI video-to-text converter and Chat GPT tool",
  "version": "1.5.2",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "js/vendor.js",
        "js/contentScript.js"
      ]
    },
    {
      "matches": [
        "https://extensionpay.com/extension/youtube-video-summarizer*"
      ],
      "js": [
        "js/extensionpayContentScript.js",
        "js/vendor.js"
      ]
    }
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://youtube.magicboxpremium.com/*"
  ]
}
